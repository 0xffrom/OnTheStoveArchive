<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/rectangle_2"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="left|center"
            android:background="@drawable/rectangle_2">
        <Button
                android:layout_width="11dp"
                android:layout_height="19dp"
                android:background="@drawable/icon_back"
                android:id="@+id/buttonBack"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="16dp"/>
        <TextView
                android:id="@+id/titleRecipe"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#FCFCFC"
                android:textSize="21dp"


        />

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <TextView
                android:id="@+id/textViewMainDescription"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:layout_width="95dp"
                android:layout_height="30dp"
                android:layout_marginLeft="21dp"
                android:text="Описание"
                android:gravity="center"
                android:textSize="17dp"
        />

        <TextView
                android:id="@+id/textViewMainIngredients"
                android:text="Ингредиенты"
                android:textSize="17dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="110dp"
                android:layout_height="30dp"/>
        <TextView
                android:id="@+id/textViewMainRecipe"
                android:text="Рецепт"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="21dp"
                android:textSize="17dp"
                android:layout_width="95dp"
                android:layout_height="30dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp">
        <View
                android:id="@+id/rectangleMainDescription"
                android:layout_width="95dp"
                android:gravity="center"
                android:layout_marginLeft="21dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_1"
        />
        <View
                android:id="@+id/rectangleMainIngredients"
                android:layout_width="105dp"
                android:gravity="center"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_1"
        />
        <View
                android:id="@+id/rectangleMainRecipe"
                android:layout_width="95dp"
                android:gravity="center"
                android:layout_height="2dp"
                android:layout_marginRight="21dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_1"
        />
    </LinearLayout>

    <RelativeLayout 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content">

        <include android:visibility="visible"
                 android:id="@+id/frameDescription"
                 layout="@layout/recipe_description"/>

        <include android:id="@+id/frameIngredients"
                 android:visibility="invisible"

                 layout="@layout/recipe_ingredients"/>


        <include android:id="@+id/frameSteps"
                 android:visibility="invisible"

                 layout="@layout/recipe_steps"/>
    </RelativeLayout>
</LinearLayout>
