<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="16dp" android:orientation="horizontal">


    <ImageView
            android:layout_width="176dp"
            android:layout_height="120dp" tools:src="@tools:sample/backgrounds/scenic"
            android:id="@+id/imageTitle" android:layout_weight="1"/>
    <EditText
            android:layout_width="184dp"
            android:layout_height="65dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/title" android:layout_weight="1" android:gravity="top|left"
            android:includeFontPadding="true" android:scrollHorizontally="false"/>
</LinearLayout>
